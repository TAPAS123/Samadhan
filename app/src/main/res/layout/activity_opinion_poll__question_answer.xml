<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_opinion_poll__question_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LV2"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >
       
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|center"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_circle_transparent"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="3dp"
                android:text="03:34"
                android:textColor="#B92805"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvquestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:text="Question 1"
                android:textColor="#000000"
                android:textSize="19dp" />

        </LinearLayout>

            <ListView
                android:id="@+id/lvanswer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp"
                android:layout_weight="1" >

            </ListView>

            <EditText
                android:id="@+id/edtremark"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/remarkedittextbox"
                android:hint="Type Here"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textColor="#626262"
                android:textSize="18dp"
                android:visibility="visible" />
            
            <TextView
                android:id="@+id/txtAnsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:text="12"
                android:textColor="#f93831"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />
        
       </LinearLayout>

        <LinearLayout
            android:id="@+id/LV2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LV3"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/prevbtn"
                android:layout_height="30dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/arrow_prev"
                android:layout_width="45dp" />


                <TextView
                    android:id="@+id/tvshowquestatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="1 out of 1"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/nextbtn"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/arrow_black"
                android:layout_width="45dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone" >

                <Button
                    android:id="@+id/markreviewbtn"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Mark for Review"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    android:background="@drawable/unmark"
                   />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LV3"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnReview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Review"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <Button
                android:id="@+id/submitbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="18dp" />

        </LinearLayout>

</RelativeLayout>
