<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
     
     <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginTop="8dp"
      android:layout_centerHorizontal="true"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_alignParentBottom="true"
      android:id="@+id/linearLayoutbutn">
		    
	      <Button 
	      android:layout_height="45dp"
	      android:text="Submit"
	      android:textSize="17dp"
	      android:layout_width="0dp"
          android:layout_weight="1"
          android:textColor="#ffffff"
          android:layout_marginRight="2dp"
          android:background="#2a4f6c"
          android:visibility="gone"
	      android:id="@+id/buttonSave"/>
      
          <Button  
          android:layout_height="45dp"
          android:background="@color/colorPrimary"
          android:text="Cancel" 
          android:id="@+id/buttonListalrt"
          android:textSize="17dp" 
          android:textColor="#ffffff"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_toRightOf="@+id/buttonSave"/>
      
      </LinearLayout>
      
     
    
     <LinearLayout 
        android:layout_width="wrap_content" 
        android:layout_alignParentTop="true" 
        android:layout_above="@+id/linearLayoutbutn" 
        android:id="@+id/linearLayout3" 
        android:orientation="vertical"
        android:layout_height="wrap_content">
          
             <ScrollView
                 android:id="@+id/scrollViewRemark"
                    android:visibility="gone"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" >

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical" >

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:layout_marginTop="10dp"
                         android:layout_height="wrap_content" >

                         <EditText
                             android:id="@+id/editTextEmark1"
                             android:padding="6dp"
                             android:inputType="textMultiLine"
                             android:hint="Write first message..."
                             android:background="@drawable/border_darkgrey"
						     android:textSize="18dp"
						     android:textColor="#000000"
                             android:layout_toLeftOf="@+id/checkBoxRemark1"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerVertical="true"
                             android:layout_alignParentLeft="true"/>

                         <CheckBox
                             android:id="@+id/checkBoxRemark1"
                             android:layout_centerVertical="true"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"/>
                         
                     </RelativeLayout>
                     
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:layout_marginTop="10dp"
                         android:layout_height="wrap_content" >

                         <EditText
                             android:id="@+id/editTextEmark2"
                             android:padding="6dp"
                             android:inputType="textMultiLine"
                             android:hint="Write second message..."
                             android:background="@drawable/border_darkgrey"
						     android:textSize="18dp"
						     android:textColor="#000000"
                             android:layout_toLeftOf="@+id/checkBoxRemark2"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerVertical="true"
                             android:layout_alignParentLeft="true"/>

                         <CheckBox
                             android:id="@+id/checkBoxRemark2"
                             android:layout_centerVertical="true"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"/>
                         
                     </RelativeLayout>
                     
                      <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:layout_marginTop="10dp"
                         android:layout_height="wrap_content" >

                         <EditText
                             android:id="@+id/editTextEmark3"
                             android:padding="6dp"
                             android:inputType="textMultiLine"
                             android:hint="Write third message..."
                             android:background="@drawable/border_darkgrey"
						     android:textSize="18dp"
						     android:textColor="#000000"
                             android:layout_toLeftOf="@+id/checkBoxRemark3"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerVertical="true"
                             android:layout_alignParentLeft="true"/>

                         <CheckBox
                             android:id="@+id/checkBoxRemark3"
                             android:layout_centerVertical="true"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"/>
                         
                     </RelativeLayout>
                     
                 </LinearLayout>
             </ScrollView>
             
            <EditText 
            android:layout_marginTop="3dp"
            android:layout_height="match_parent" 
            android:id="@+id/etremarkShowdialogs" 
            android:background="@drawable/edittextstyle" 
		    android:textSize="18dp"
		    android:textColor="#000000"
		    android:visibility="gone"
            android:layout_width="match_parent"/>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="50dp" >
                
                <LinearLayout
	                android:layout_width="match_parent"
	                android:id="@+id/rrDate"
                    android:orientation="horizontal"
	                android:gravity="center_vertical|center"
	                android:layout_height="wrap_content" >
                      
                    <ImageView
                        android:id="@+id/imageprevdate"
                        android:layout_alignParentLeft="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/arrow_prev" />

                    <!-- <TextView
                       android:id="@+id/textView3"
                       android:layout_alignParentLeft="true"
                       android:layout_width="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textColor="#000000"
                       android:textAppearance="?android:attr/textAppearanceMedium" />  --> 

                      <EditText
                       android:id="@+id/editTextDay"
                       android:inputType="number"
                       android:padding="6dp"
                       android:gravity="center"
		               android:textColor="#000000"
		               android:background="@drawable/transwhite"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:layout_alignParentTop="true"
                       android:maxLength="2"
                       android:layout_marginLeft="3dp"
                       android:layout_centerVertical="true"
                       android:hint="DD"
                       android:textColorHint="#000000"
                       android:layout_toRightOf="@+id/imageprevdate"/>

                      <TextView
                       android:id="@+id/textView4"
                       android:layout_centerVertical="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toRightOf="@+id/editTextDay"
                       android:text="-"
                       android:textColor="#ffffff"
                       android:textAppearance="?android:attr/textAppearanceMedium" />

                      <EditText
                       android:id="@+id/editTextMonth"
                       android:maxLength="2"
                       android:hint="MM"
                       android:padding="6dp"
                       android:gravity="center"
		               android:textColor="#000000"
		               android:background="@drawable/transwhite"
                       android:inputType="number"
                       android:textColorHint="#000000"
                       android:layout_centerVertical="true"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:layout_alignParentTop="true"
                       android:layout_toRightOf="@+id/textView4"/>

                    <ImageView
                        android:id="@+id/imageNextdate"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:src="@drawable/arrow_black"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/editTextMonth" />

                    <Button
                    android:id="@+id/btnDateSubmit"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:background="@drawable/transwhite"
                    android:layout_centerVertical="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true"
                    android:text="Submit" />


                </LinearLayout>
                
                 

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" >

              <!--  <CheckBox
                    android:id="@+id/checkBoxALL"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Select All" /> --> 

                <TextView
                    android:id="@+id/textViewNoDisplay"
                    android:layout_marginTop="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Record"
                    android:textSize="18dp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                      
            </RelativeLayout>

         <LinearLayout
             android:id="@+id/llckhbox"
             android:layout_width="match_parent"

             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:layout_height="wrap_content">

             <CheckBox
                 android:id="@+id/cHkboxall"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:gravity="center_vertical"
                 android:textColor="#2a4f6c"
                 android:textSize="16dp"
                 android:textStyle="bold"
                 android:text="Select All "/>

         </LinearLayout>
        
             <ListView 
   			  android:layout_marginTop="3dp"
		      android:id="@+id/listViewAlert" 
		      android:layout_height="wrap_content"
		      android:layout_width="match_parent"/>
             
        </LinearLayout>

        

</RelativeLayout>
