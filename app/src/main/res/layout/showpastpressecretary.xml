<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:background="@drawable/bg1"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@+id/rrupper"
        android:layout_margin="5dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="265dp"
            android:orientation="vertical"
			android:background="@drawable/border_darkgrey">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"

				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:orientation="horizontal">
            
				<TextView
				android:id="@+id/textView1Past"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Name:   "
				android:textSize="18dp"
				android:textColor="#3e6889"
				android:textStyle="bold" />

			   <TextView
				android:id="@+id/tvNamePast"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:text="dadasdada"
				android:textSize="16dp" />

			</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:layout_marginTop="2dp"
			android:orientation="horizontal">
	    
	     <TextView
	        android:id="@+id/textView2Past"
	        android:textStyle="bold"
	        android:textColor="#3e6889"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Year:     "
	         android:textSize="18dp" />

			<TextView
                android:id="@+id/tvYearPast"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="wqrrwe"
                android:textSize="16dp" />

		</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:layout_marginTop="2dp"
			android:orientation="horizontal">

	     <TextView
	        android:id="@+id/textView3Past"
	        android:textStyle="bold"
	        android:textColor="#3e6889"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Mobile  "
	        android:textSize="18dp" />
	
	    <TextView
	        android:id="@+id/tvContactPast"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:text="adfgfdgdg"
	        android:layout_gravity="right|left"
	        android:textSize="18dp" />
			</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:layout_marginTop="2dp"
			android:orientation="horizontal">
	    
	    <TextView
	        android:id="@+id/textView4Past"
	        android:textStyle="bold"
	        android:textColor="#3e6889"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Email:   "
	        android:textSize="18dp"/>
	
	    <TextView
	        android:id="@+id/tvEamilPast"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:text="adfgfdgdg"
	        android:textSize="16dp" />
			</LinearLayout>
            
        </LinearLayout>
    </ScrollView>
    
	  

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rrupper"
        android:layout_marginTop="1dp"
        android:layout_height="50dp"
		android:gravity="center_vertical"
        android:layout_alignLeft="@+id/rrm1"
        android:layout_alignParentTop="true" >

          <TextView
	        android:id="@+id/tvheadPast"
	        android:textSize="18dp"
	        android:layout_centerHorizontal="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Past President"
	        android:textColor="#000000"
	        android:textStyle="bold"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    
       
</RelativeLayout>
